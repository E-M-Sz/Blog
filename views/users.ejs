<%- include partials/top.ejs %>

<%- include partials/nav.ejs %>

<div class="container mt-3">

  <h1>Users:</h1>

  <% for(var i=0; i < items.length; i++){ %>
    <div class="card mt-5" id="<%- items[i].id %>">
      <div class="card-block">
        <h4 class="card-title username"><%= items[i].username %></h4>
        <p class="description"><%= items[i].description %></p>
        <p class="text-muted skill"><%= items[i].skill %></p>
        <button type="button" id="<%- items[i].id %>" class="btn btn-primary edit" data-toggle="modal" data-target="#exampleModal">Edit</button>
        <button type="button" id="<%- items[i].id %>" class="btn btn-danger delete">Delete</button>
      </div>
    </div>
  <% } %>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="user-name" class="form-control-label">Username:</label>
            <input type="text" class="form-control" id="user-name">
          </div>
          <div class="form-group">
            <label for="description-text" class="form-control-label">Description:</label>
            <input type="text" class="form-control" id="description-text"></input>
          </div>
          <div class="form-group">
            <label for="skill-text" class="form-control-label">Skill:</label>
            <input type="text" class="form-control" id="skill-text"></input>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary save" data-dismiss="modal">Save</button>
      </div>
    </div>
  </div>
</div>

<%- include partials/bottom.ejs %>
